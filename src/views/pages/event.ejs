<!-- src/views/pages/events.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/events">Events</a></li>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <h1>Events</h1>
    <ul>
      <% events.forEach(event => { %>
        <li><%= event.title %> - <%= event.description %></li>
      <% }) %>
    </ul>
    <div class="pagination">
      <% if (currentPage > 1) { %>
        <a href="/events?page=<%= currentPage - 1 %>&limit=<%= limit %>">Previous</a>
      <% } %>
      <% for (let i = 1; i <= totalPages; i++) { %>
        <a href="/events?page=<%= i %>&limit=<%= limit %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
      <% } %>
      <% if (currentPage < totalPages) { %>
        <a href="/events?page=<%= currentPage + 1 %>&limit=<%= limit %>">Next</a>
      <% } %>
    </div>
  </main>
  <footer>
    <p>&copy; 2025 Event Management System</p>
  </footer>
</body>
</html>